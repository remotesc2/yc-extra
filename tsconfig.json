{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es2018",
    "lib": ["dom", "es2017"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
